@section Scripts {
    <script src="~/Scripts/tinymce/tiny_mce.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            getUtilisateurs();
        });

        function OpenPopup(idUser) {

            if (idUser == null) {
                $.ajax({
                    url: '@Url.Action("Form")',
                    cache: false,
                    success: function (response) {
                        $("#modal-xl").html(response);
                        $("#modal-xl").modal("toggle");
                    }
                })
            } else {
                //Url.Action("GetByList", "Listing", new { name = "John", contact = "calgary, vancouver" })
                //Url.Action("Display", "Customer")?uname=' + firstname + '&name=' + username;
                $.ajax({
                    url: '@Url.Action("Form", "Utilisateurs")?id=' + idUser,
                    cache: false,
                    
                }).done(function (response) {
                        $("#modal-xl").html(response);
                        $("#modal-xl").modal("toggle");
                });
            }
        };

        function DeletePopup(id) {

            if (id) {
                $.ajax({
                    url: '/Utilisateurs/Delete/' + id,
                    cache: false,
                    success: function (data) {
                        $("#modal-lg").html(data);
                        $("#modal-lg").modal("toggle");
                    }
                })
            }
        };

        function deletion(id) {
            $.ajax({
                type: "POST",
                url: '/Utilisateurs/DeleteConfirmed/' + id,
                data: {
                    id: id
                },
                cache: false
            }).done(function (response) {
                if (response == "OK") {
                    $("#modal-lg").modal("hide");
                    getUtilisateurs();
                    document.getElementById("error").style.display = "none";
                }
                else {
                    $("#error").text(response);
                    //document.getElementById("Libelle").focus();
                    document.getElementById("error").style.display = "block";
                    return;
                }
            });
        }

        function getUtilisateurs() {
            $.ajax({
                url: '@Url.Action("Read")',
                cache: false,
                success: function (data) {
                   $("#example1").html(data);
                }
            })
        };

        function OnSuccess(data) {
            
            if (data == "OK") {
                document.getElementById("error").style.display = "none";
                $("#modal-xl").modal("hide");
                getUtilisateurs();
            } else {
                $("#error").text(data);
                document.getElementById("error").innerHTML = data
                document.getElementById("Libelle").focus();
                document.getElementById("error").style.display = "block";
                return;
            }
        };


    </script>
}
