@{
    ViewBag.Title = "Contact";
}

<!--Page Title-->
<section class="page-banner">
    <div class="image-layer" style="background-image:url(/images/background/banner-image-2.jpg);"></div>

    <div class="banner-inner">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <h1>Contact</h1>
                <div class="page-nav">
                    <ul class="bread-crumb clearfix">
                        <li><a href="~/Home/Index">Accueil</a></li>
                        <li class="active">Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!--Contact Section-->
<section class="contact-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="left-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner-box">
                    <div class="images clearfix">
                        <figure class="image"><img src="~/images/resource/featured-image-10.jpg" alt=""></figure>
                        <figure class="image"><img src="~/images/resource/featured-image-11.jpg" alt=""></figure>
                    </div>
                    <div class="contact-info-box">
                        <div class="inner">
                            <ul class="info">
                                <li class="clearfix">
                                    <h4>Contact rapide</h4>
                                    <div class="content">
                                        <span class="icon flaticon-telephone-2"></span>
                                        <span>Téléphone</span><br>
                                        <a class="txt" href="tel:+4488812345">+229 90 90 90 90</a>
                                    </div>
                                </li>
                                <li class="clearfix">
                                    <h4>Adresse email</h4>
                                    <div class="content">
                                        <span class="icon flaticon-postcard"></span>
                                        <span>Envoyez nous un mail au :</span><br>
                                        <a href="mailto:contact@encore-benin.org" class="txt">contact@encore-benin.org</a>
                                    </div>
                                </li>
                                <li class="clearfix">
                                    <h4>Rendez-nous visite à l'adresse suivante</h4>
                                    <div class="content">
                                        <span class="icon flaticon-map"></span>
                                        <span class="txt">01 BP 0000, PK10 Akpakpa <br>Cotonou, BENIN</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner">
                    <div class="sec-title with-separator">
                        <h2>Nous sommes là pour vous aider</h2>
                        <div class="separator"><span class="cir c-1"></span><span class="cir c-2"></span><span class="cir c-3"></span></div>
                        <div class="lower-text">Posez-nous toute sorte de question. Nous nous ferons le plaisir de vous répondre au plus vite !.</div>
                    </div>

                    <div class="default-form form-box">
                        @*<form method="post" action="#" id="contact-form">*@

                        @using (Ajax.BeginForm("PostContact", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnComplete" }, new { id = "contact-form" }))
                        {
                            <div class="form-group">
                                <div class="field-inner">
                                    <input type="text" name="Nom" placeholder="Nom & prénoms *" required="" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="field-inner">
                                    <input type="email" name="Email" placeholder="Email *" required="" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="field-inner">
                                    <select name="Objet" class="custom-select-box">
                                        <option>Démocratie</option>
                                        <option>Arts & culture </option>
                                        <option>Lois & constitution</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="field-inner">
                                    <textarea name="Message" placeholder="Message...*" required=""></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="theme-btn btn-style-one"><span class="btn-title">Envoyer message</span></button>
                            </div>
                        }

                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!--Map Section-->
<section class="map-section">
    <!--Map Box-->
    <div class="map-box">
        <div class="map-canvas"
             data-zoom="10"
             data-lat="-37.817085"
             data-lng="144.955631"
             data-type="roadmap"
             data-hue="#ffc400"
             data-title="Melbourne"
             data-icon-path="/images/icons/map-marker.png"
             data-content="Melbourne VIC 3000, Australia<br><a href='mailto:info@youremail.com'>info@youremail.com</a>">
        </div>
    </div>
</section>

@section scripts{
    
    <script>
        $(document).ready(function () {
            $("#menuContact").attr("class", "current");
        });

        function OnComplete(data) {
            if (data == "OK") {
                alert("Message envoyé avec succès");
                window.location.reload();
            }
            else {
                alert(data);
                return;
            }
        }
    </script>
}
