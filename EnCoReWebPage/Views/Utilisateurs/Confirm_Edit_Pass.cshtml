@model EnCoReWebPage.App_Classes.UserVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Réinitialisation mot de passe réussie</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/Home/Index"><b>EnCoRe</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Félicitation @Model.Nom @Model.Prenoms </h4>
                    <p style="font-weight:bold">Votre compte a été réinitialisé.</p>
                    <p>Vous pouvez maitenant vous connecter avec votre nouveau mot de passe.</p>
                    <hr>
                    <a href="@Url.Action("Login", "Utilisateurs")"><button type="button" class="btn btn-success btn-sm"><i class="fa fa-sign-in"></i>&nbsp; CONNEXION</button></a>
                </div>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Scripts/AdminLTE/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/AdminLTE/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/AdminLTE/dist/js/adminlte.min.js"></script>

</body>
</html>
