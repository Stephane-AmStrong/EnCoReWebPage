@model EnCoReWebPage.Entities.Category

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Supprimer une catégorie</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>Etês vous sûr de vouloir supprimer cette catégorie ?</p>

            <div class="form-group">
                @Html.Label("Catégorie")
                @Html.TextBoxFor(model => model.Libelle, null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            <button type="button" class="btn btn-danger" onclick="deletion('@Model.Id')">Supprimer</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->